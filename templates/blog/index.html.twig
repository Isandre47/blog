    {% for toto in articles %}
        <div class="row bg-info m-3 shadow">
            <div class="col-4">
                    <img class="img-fluid rounded m-4 shadow" src={%  if toto.picture == true %} "/{{ toto.picture }}" {% else %} "https://via.placeholder.com/500" {% endif%} alt="Card image cap">
                    {#<img class="img-fluid rounded m-4 shadow" src="/{{ toto.picture}}" alt="Card image cap">#}
            </div>
            <div class="col-7 m-5">
                <h5>{{ toto.title }}</h5>
                <p class="p-3">{{ toto.content }}</p>
                <a href="{{ path('article_show', {'id': toto.id}) }}" class="btn btn-primary p-2 mb-3">En savoir plus</a>
                <ul class="list-unstyled">
                    {% for tag in toto.tags %}
                        <a href="{{ path('tag_show', {'name': tag.name}) }}"><li>#{{ tag.name }} </li></a>
                    {% else %}
                        <li>No tags for this article</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

    {% endfor %}

